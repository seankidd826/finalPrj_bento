<div class="container">
  <div class="row">
  <h1>會員管理</h1>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>會員編號</th>
          <th>姓名</th>
          <th>電話</th>
          <th>地址</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @admin_users.each do |admin_user| %>
          <tr>
          <td><%= admin_user.id %></td>
            <td><%= admin_user.name %></td>
            <td><%= admin_user.phone %></td>
            <td>
                <%= admin_user.address[0..10] %><br>
                <%= admin_user.address[11..-1] %>
            </td>
            <td><%= admin_user.email %></td>
            <td><%= link_to 'Show', admin_user,:class => "btn btn-primary" %>
                <%= link_to 'Edit', edit_admin_user_path(admin_user),:class => "btn btn-primary" %>
                <%= link_to 'Destroy', admin_user, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @admin_users %><br>

    <%= link_to '新會員', new_admin_user_path, :class => "btn btn-success" %>
    <%= link_to '訂單管理', admin_orders_path, :class => "btn btn-primary" %>
    <%= link_to '菜單管理', admin_menus_path, :class => "btn btn-primary" %>
    <%= link_to '媽媽故事管理', admin_stories_path, :class => "btn btn-primary" %>
    <%= link_to '回到前台', root_path, :class => "btn btn-default" %>
  </div>
</div>